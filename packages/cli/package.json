{
  "name": "@endorhq/rover",
  "version": "1.1.0",
  "description": "A manager for AI coding agents that works with Claude Code, Gemini, and Qwen.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "rover": "dist/index.js"
  },
  "license": "Apache-2.0",
  "keywords": [
    "CLI",
    "Endor",
    "AI Agents",
    "AI",
    "Coding Agents",
    "AI Coding Agents",
    "Gemini",
    "Qwen",
    "Codex",
    "Claude",
    "Claude Code",
    "MCP"
  ],
  "author": "Endor Team <hello@endor.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/endorhq/rover.git",
    "directory": "packages/cli"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "dist/*",
    "src/clis.json"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "TSUP_DEV=true tsdown --watch src/",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "package": "npm pack",
    "test": "vitest --run --silent",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "ansi-colors": "^4.1.3",
    "commander": "^14.0.0",
    "enquirer": "^2.4.1",
    "execa": "^9.6.0",
    "nanoid": "^5.0.9",
    "ora": "^8.2.0",
    "tmp": "^0.2.5",
    "yocto-spinner": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/tmp": "^0.2.6",
    "@vitest/ui": "^2.1.8",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
